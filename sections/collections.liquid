{{ 'collections.css' | asset_url | stylesheet_tag }}

<section class="custom-collections">
  <div class="container">
    <div class="collections-wrapper">
      {% for block in section.blocks %}
        <div class="collection-item">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
          <div class="colletion-text-wrapper">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
            {% render 'button'
              , 
 link: block.settings.link
              , 
 text: block.settings.button_text
              , 
 outline_color: 'grey'
            %}
          </div>

        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Custom Collections",
    "blocks": [
      {
        "type": "collection",
        "name": "Collection Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Collection Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Collection Title",
            "default": "Collection Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Collection Description",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
          },
          {
            "type": "url",
            "id": "link",
            "label": "Collection Link"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Shop Now"
          }
        ]
      }
    ],
    "presets": [
